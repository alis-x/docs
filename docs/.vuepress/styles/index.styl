.theme-container.home-page-class{

    .home{
        display: flex;
        align-content: center;
        justify-content: center;
        height: 70vh;
        flex-direction: column;
    }

    .home .hero img{
        max-width: 50vw;
        max-height: 15vh;
        margin: 0 auto 0;
    }

    .home .hero h1{
        margin: 0 auto 0;
    }

    #main-title{
        display: none;
    }

    .home .hero h1, .home .hero .description, .home .hero .action{
        margin: 0 auto;
    }

    .home .hero .description{
        color: grey;
        font-weight: 100;
        
    }

    .home .footer{
        border-top: none;
    }

    .action{
        .nav-link.action-button{
            background-color: white;
            border-bottom: white;
            color: #2c3e50;
            font-weight: 250;
        }
    }
}

.theme-container{
    .navbar .site-name {
        display: none;
    }
}

main footer {
    text-align: end;
} 